{
  "ConnectionStrings": {
    "NemesisEuchreDb": "Server=(localdb)\\mssqllocaldb;Database=NemesisEuchre;Trusted_Connection=True;Min Pool Size=4;Max Pool Size=32;Pooling=true;Connection Timeout=300"
  },
  "GameExecution": {
    "MaxDegreeOfParallelism": 24,
    "Strategy": "Fixed",
    "MaxThreads": 24,
    "ReservedCores": 1
  },
  "Persistence": {
    "BatchSize": 200,
    "MaxBatchSizeForChangeTracking": 50,
    "BulkInsertThreshold": 10,
    "UseBulkInsert": true,
    "BulkCopyTimeout": 120,
    "IdvOutputPath": "./data"
  },
  "MachineLearning": {
    "ModelOutputPath": "./models",
    "NumberOfIterations": 100,
    "LearningRate": 0.1,
    "NumberOfLeaves": 31,
    "MinimumExampleCountPerLeaf": 20,
    "ExplorationTemperature": 0.2
  },
  "Logging": {
    "LogLevel": {
      "Default": "Critical",
      "NemesisEuchre.DataAccess": "Information"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "IncludeScopes": true
      }
    }
  }
}
