{
  "ConnectionStrings": {
    "NemesisEuchreDb": "Server=(localdb)\\mssqllocaldb;Database=NemesisEuchre;Trusted_Connection=True;MultipleActiveResultSets=true;Min Pool Size=4;Max Pool Size=32;Pooling=true;Connection Timeout=30"
  },
  "GameExecution": {
    "MaxDegreeOfParallelism": 24,
    "Strategy": "Fixed",
    "MaxThreads": 24,
    "ReservedCores": 1
  },
  "Persistence": {
    "BatchSize": 25,
    "MaxBatchSizeForChangeTracking": 50,
    "BulkInsertThreshold": 10,
    "UseBulkInsert": true
  },
  "MachineLearning": {
    "ModelOutputPath": "./models",
    "TrainingIterations": 100,
    "LearningRate": 0.1
  },
  "Logging": {
    "LogLevel": {
      "Default": "Critical",
      "NemesisEuchre.DataAccess": "Information"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "IncludeScopes": true
      }
    }
  }
}
